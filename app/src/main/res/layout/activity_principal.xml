<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.vinypaulino.mobile.signosnew.Principal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/principal" />

    <TextView
        android:id="@+id/textDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerDia"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="109dp"
        android:text="@string/dia" />

    <Spinner
        android:id="@+id/spinnerDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"

        android:layout_alignStart="@+id/imageView2"
        android:layout_alignTop="@+id/textDia"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/textMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerMes"
        android:layout_below="@+id/spinnerDia"
        android:layout_marginTop="24dp"
        tools:text="@string/mes" />

    <Spinner
        android:id="@+id/spinnerMes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinnerDia"
        android:layout_alignStart="@+id/spinnerDia"
        android:layout_below="@+id/textMes"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinnerMes"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinnerMes"
        android:text="Button"
        tools:text="@string/botao" />

</RelativeLayout>
